<div class="block-body">
@model UniversityMap.ViewModels.RegisterViewModel

    <div class="wrap-box">
    <div class="box">
        <h2>Регистрация</h2>
        <form class="box-form" method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        
            <input asp-for="Email" placeholder="Электронная почта" />
            <span asp-validation-for="Email"></span>
        
            <input asp-for="Password" placeholder="Пароль" />
            <span asp-validation-for="Password"></span>
        
            <input asp-for="PasswordConfirm" placeholder="Подтвердите пароль" />
            <span asp-validation-for="PasswordConfirm"></span>
        
            <button class="btn" type="submit">Зарегистрироваться</button>
        </form>
    </div>
    </div>
</div>